<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <me.dm7.barcodescanner.zxing.CustomZXingScannerView
        android:id="@+id/zxing_scanner_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:borderColor="?attr/colorPrimary"
        app:borderLength="16dp"
        app:borderLineColor="#FFFFFF"
        app:borderWidth="4dp"
        app:laserColor="?attr/colorPrimary"
        app:laserEnabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:maskColor="#FF77797D"
        app:shouldScaleToFill="true"
        app:squaredFinder="true"/>

    <ImageView
        android:id="@+id/iv_border"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="@drawable/ic_qr_code_img"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
